ALLOWED_HOSTS=factora.de,www.factora.de,your-server-ip

# ==========================================
# Database (PostgreSQL)
# ==========================================
DB_NAME=factora_db
DB_USER=factora_user
DB_PASSWORD=your-strong-password-here
DB_HOST=db
DB_PORT=5432

# ==========================================
# Redis
# ==========================================
